    <style>
      h2 {
        font-family: arial;
        font-size: 50px;
      }

      canvas {
        width: 200px;
        height: 125px;
        border: 3px;
      }

      .blueblue {
        background-color: lightblue;
        font-family: arial;
        font-size: 20px;
        border: 3px solid black;
        padding: 20px;
        margin: 10px;
        width: 200px;
      }

      .greegree {
        background-color: lightgreen;
        font-family: arial;
        font-size: 20px;
        border: 3px solid black;
        padding: 20px;
        margin: 10px;
        width: 200px;
      }

      .duhpink {
        background-color: pink;
        font-family: arial;
        font-size: 20px;
        border: 3px solid black;
        padding: 20px;
        margin: 10px;
        width: 200px;
      }

      .purpole {
        background-color: purple;
        font-family: arial;
